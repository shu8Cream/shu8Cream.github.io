---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import P5Canvas from '../components/P5Canvas.astro';
---

<Layout title="shu8Cream.dev" fullWidth={true}>
	
    <div class="mb-16 text-center">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-blue-400">
            shu8Cream.dev
        </h1>
        <p class="text-xl text-gray-400 max-w-lg mx-auto">
            shu8Creamのhomepage <br/>
            Software Engineer, 競技プログラミングをしています。
        </p>
    </div>

    <div class="mb-16 border border-white/10 rounded-2xl overflow-hidden shadow-2xl shadow-purple-900/20">
		<P5Canvas />
        <p class="text-xs text-gray-500 mt-2 text-right">
            Based on <a href="https://openprocessing.org/sketch/2326097" target="_blank" class="underline hover:text-gray-300">“240809a”</a>
            by Okazz (<a href="https://creativecommons.org/licenses/by-nc-sa/3.0" target="_blank" class="underline hover:text-gray-300">License CreativeCommons Attribution NonCommercial ShareAlike</a>)
        </p>
    </div>

    <div class="flex justify-center gap-4">
        <a href="/works" class="px-8 py-3 rounded-full bg-white text-gray-900 font-bold hover:bg-gray-200 transition">
            View Works
        </a>
        <a href="/blog" class="px-8 py-3 rounded-full border border-white/20 hover:bg-white/10 transition backdrop-blur-sm">
            Read Blog
        </a>
    </div>

</Layout>