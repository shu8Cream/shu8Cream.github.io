---
// src/pages/blog/[...slug].astro
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
---

<Layout title={entry.data.title} fullWidth={true}>
    <!-- <div class="max-w-full mx-auto px-4"> -->
    <!-- <div class="w-full px-4 lg:px-8 mx-auto"> -->
    <div class="w-full max-w-[1920px] mx-auto px-4 lg:px-8">
        
        <div class="flex flex-col lg:flex-row gap-8">
            
            <main class="flex-1 min-w-0">
                <a href="/blog" class="inline-block mb-8 text-gray-400 hover:text-white transition">
                    ← ブログ一覧に戻る
                </a>

                <header class="mb-10 text-center">
                    <div class="mb-4 flex justify-center gap-2">
                        {entry.data.tags.map(tag => (
                            <a href={`/tags/${tag}`} class="px-3 py-1 rounded-full bg-white/5 border border-white/10 text-sm text-purple-300 hover:bg-purple-500/20 transition">
                                #{tag}
                            </a>
                        ))}
                    </div>
                    <h1 class="text-3xl md:text-5xl font-bold mb-4 leading-tight">{entry.data.title}</h1>
                    <p class="text-gray-400">
                        {entry.data.pubDate.toLocaleDateString('ja-JP')}
                    </p>
                </header>

                <div class="p-8 md:p-10 rounded-3xl bg-white/5 border border-white/10 backdrop-blur-md">
                    <div class="prose prose-lg prose-invert max-w-none">
                        <Content />
                    </div>
                </div>
            </main>

            <aside class="w-full lg:w-64 shrink-0 hidden lg:block">
                <div class="sticky top-24">
                    <div class="p-6 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-sm">
                        <h2 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-4">
                            目次
                        </h2>
                        <ul class="space-y-2 text-sm">
                            {headings.map((heading) => (
                                <li class={`${heading.depth === 3 ? 'pl-4' : ''}`}>
                                    <a href={`#${heading.slug}`} class="block text-gray-400 hover:text-purple-400 transition-colors py-1 line-clamp-2">
                                        {heading.text}
                                    </a>
                                </li>
                            ))}
                        </ul>
                        {headings.length === 0 && (
                            <p class="text-gray-500 text-xs">目次はありません</p>
                        )}
                    </div>
                </div>
            </aside>

        </div>
    </div>
</Layout>

<style is:global>
    html {
        scroll-behavior: smooth;
        scroll-padding-top: 100px;
    }
</style>