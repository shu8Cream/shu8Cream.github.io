---
// src/pages/blog/[...slug].astro
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
---

<Layout title={entry.data.title} fullWidth={true}>
    <!-- <div class="max-w-full mx-auto px-4"> -->
    <!-- <div class="w-full px-4 lg:px-8 mx-auto"> -->
    <div class="w-full max-w-[1920px] mx-auto px-4 lg:px-8">
        
        <div class="flex flex-col lg:flex-row gap-8">
            
            <main class="flex-1 min-w-0">
                <a href="/blog" class="inline-block mb-8 text-gray-400 hover:text-white transition">
                    ← ブログ一覧に戻る
                </a>

                <header class="mb-10 text-center">
                    <div class="mb-4 flex justify-center gap-2">
                        {entry.data.tags.map(tag => (
                            <a href={`/tags/${tag}`} class="px-3 py-1 rounded-full bg-white/5 border border-white/10 text-sm text-purple-300 hover:bg-purple-500/20 transition">
                                #{tag}
                            </a>
                        ))}
                    </div>
                    <h1 class="text-3xl md:text-5xl font-bold mb-4 leading-tight">{entry.data.title}</h1>
                    <!-- <div class="text-gray-400 flex flex-wrap justify-center gap-4">
                        <div class="flex items-center gap-2">
                            <span class="text-xs uppercase tracking-wider opacity-70">Published</span>
                            <time>{entry.data.pubDate.toLocaleDateString('ja-JP')}</time>
                        </div>

                        {entry.data.updatedDate && (
                            <div class="flex items-center gap-2 text-purple-300">
                                <span class="text-xs uppercase tracking-wider opacity-70">Updated</span>
                                <time>{entry.data.updatedDate.toLocaleDateString('ja-JP')}</time>
                            </div>
                        )}
                    </div> -->
                    <div class="text-gray-400 flex flex-wrap justify-center items-center gap-6 text-sm mt-2">
                        <div class="flex items-center gap-2" title="公開日">
                            <Icon name="mdi:calendar-month" class="w-5 h-5 text-gray-500" />
                            <time>{entry.data.pubDate.toLocaleDateString('ja-JP')}</time>
                        </div>

                        {entry.data.updatedDate && (
                            <div class="flex items-center gap-2 text-purple-300" title="更新日">
                                <Icon name="mdi:update" class="w-5 h-5" />
                                <time>{entry.data.updatedDate.toLocaleDateString('ja-JP')}</time>
                            </div>
                        )}
                    </div>
                </header>

                <div class="p-8 md:p-10 rounded-3xl bg-white/5 border border-white/10 backdrop-blur-md">
                    <div class="prose prose-lg prose-invert max-w-none">
                        <Content />
                    </div>
                </div>
            </main>

            <aside class="w-full lg:w-64 shrink-0 hidden lg:block">
                <div class="sticky top-24">
                    <div class="p-6 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-sm">
                        <h2 class="text-sm font-bold text-gray-400 uppercase tracking-wider mb-4">
                            目次
                        </h2>
                        <ul class="space-y-2 text-sm">
                            {headings.map((heading) => {
                                // 深さに応じてクラスを振り分ける
                                let paddingClass = '';
                                if (heading.depth === 3) paddingClass = 'pl-4';      // h3なら1段下げ
                                else if (heading.depth === 4) paddingClass = 'pl-8'; // h4なら2段下げ
                                else if (heading.depth >= 5) paddingClass = 'pl-12'; // h5以降は3段下げ

                                return (
                                    <li class={paddingClass}>
                                        <a 
                                            href={`#${heading.slug}`} 
                                            class={`block py-1 transition-colors line-clamp-2 ${
                                                // h2は少し大きく、h3以降は薄くするなどのメリハリをつける
                                                heading.depth === 2 
                                                    ? 'text-gray-300 font-medium hover:text-purple-400' 
                                                    : 'text-gray-500 hover:text-purple-300 text-xs'
                                            }`}
                                        >
                                            {heading.text}
                                        </a>
                                    </li>
                                );
                            })}
                        </ul>
                        {headings.length === 0 && (
                            <p class="text-gray-500 text-xs">目次はありません</p>
                        )}
                    </div>
                </div>
            </aside>

        </div>
    </div>
</Layout>

<style is:global>
    html {
        scroll-behavior: smooth;
        scroll-padding-top: 100px;
    }
</style>